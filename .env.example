# 카카오 JavaScript 키 (https://developers.kakao.com에서 발급)
NEXT_PUBLIC_KAKAO_JS_KEY=your_kakao_javascript_key_here

# 사이트 URL (Vercel 배포 후 실제 URL로 변경)
NEXT_PUBLIC_SITE_URL=https://your-wedding-invitation.vercel.app

# Firebase Configuration (방명록 기능용)
# https://console.firebase.google.com에서 프로젝트 생성 후 발급
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Guestbook Master Password (방명록 관리자 비밀번호)
NEXT_PUBLIC_GUESTBOOK_MASTER_PASSWORD=your_master_password
